*
  box-sizing border-box

body
  background #eee
  font-family sans-serif
  font-weight 100
  color #555
  margin 0

.layout
  display flex
  justify-content space-between
  position absolute
  top 0
  left 0
  right 0
  bottom 0

nav
  width: 15%
  padding 10px
  overflow auto

h1
  font-weight 100
  text-transform lowercase

.feeds
  width: 40%
  background white
  overflow auto

  a
    display block
    max-width 100%
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    text-decoration none
    font-weight 100
    color: #333
    font-size 14px
    padding 10px 15px
    transition 0.2s
    border-bottom 1px solid #eee

    &:hover
      background #ccddff

    &:visited
      font-weight 100
      color: #999

    b:after
      content: ' '

    i
      color #aaa
      font-style normal

.reader
  width: 45%
  background #aaa
  overflow auto
  padding 10px

  iframe
    width 100%
    border none
    min-height 100%
